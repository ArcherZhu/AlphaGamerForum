<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/l1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/bgp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/nickname_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.shiro.issolution.gamerforum.orwidget.ImageViewPlus
                android:id="@+id/user_image"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@mipmap/bgp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="35dp" />

            <TextView
                android:id="@+id/NickName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|end"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                android:gravity="end|bottom"
                android:textColor="#703563"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/load_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="90dp"
            android:background="@android:color/transparent"
            android:text="@string/load_register"
            android:textColor="#703563"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/l3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <Button
            android:id="@+id/button_edit"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/edit_bg"
            android:drawableLeft="@mipmap/guanyuwomen"
            android:drawableRight="@mipmap/sanjiao"
            android:gravity="center_vertical"
            android:text="修改信息"
            android:textSize="18dp" />

        <Button
            android:id="@+id/button_title"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/edit_bg"
            android:drawableLeft="@mipmap/guanyuwomen"
            android:drawableRight="@mipmap/sanjiao"
            android:gravity="center_vertical"
            android:text="我的主题"
            android:textSize="18dp" />

        <Button
            android:id="@+id/button_response"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/edit_bg"
            android:drawableLeft="@mipmap/guanyuwomen"
            android:drawableRight="@mipmap/sanjiao"
            android:gravity="center_vertical"
            android:text="我的回复"
            android:textSize="18dp" />

        <Button
            android:id="@+id/button_collection"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="@drawable/edit_bg"
            android:drawableLeft="@mipmap/guanyuwomen"
            android:drawableRight="@mipmap/sanjiao"
            android:gravity="center_vertical"
            android:onClick="about_onClick"
            android:text="我的收藏"
            android:textSize="18dp" />

        <Button
            android:id="@+id/button_feedback"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/edit_bg"
            android:drawableLeft="@mipmap/guanyuwomen"
            android:drawableRight="@mipmap/sanjiao"
            android:gravity="center_vertical"
            android:text="我的反馈"
            android:textSize="18dp" />


    </LinearLayout>

    <ImageButton
        android:id="@+id/button_setting"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_bg"
        android:src="@mipmap/shezhi" />


</LinearLayout>